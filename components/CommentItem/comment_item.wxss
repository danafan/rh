/* components/CommentItem/comment_item.wxss */

.comment_box {
  border-bottom: 1rpx solid #f6f6f6;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
}

.user_icon {
  margin-right: 15rpx;
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
}

.user_info {
  flex: 1;
}

.user_content {
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
}

.content_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.user_name {
  font-size: 28rpx;
  color: #3d5165;
  font-weight: 700;
}

.create_time {
  font-size: 26rpx;
  color: #8a8a8a;
}

.star_list {
  display: flex;
  align-items: center;
}

.hot_icon {
  width: 30rpx;
  height: 30rpx;
}
.is_good{
  position: absolute;
  top:0;
  right: 0;
  border: 5rpx solid #ff5858;
  border-radius: 5rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: #ff5858;
  padding-left: 10rpx;
  padding-right: 10rpx;
  transform: rotate(-25deg);
}
.comment_info {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #0b0d1d;
}

.comment_imgs {
  margin-top: 8rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.comment_img {
  margin-right: 6rpx;
  margin-bottom: 6rpx;
  width: 180rpx;
  height: 180rpx;
}

/* 消费套餐 */

.package_box {
  margin-top: 10rpx;
  display: flex;
}

.package_con {
  background: #F1F6F9;
  width: 50%;
  height: 62rpx;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.package_name {
  flex: 1;
  font-size: 25rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.right_icon {
  width: 26rpx;
  height: 26rpx;
}

/* 回复 */

.reply_box {
  border-top: 1rpx solid #f6f6f6;
  margin-top: 10rpx;
  padding-top: 10rpx;
  font-size: 25rpx;
}

.reply_those {
  color: #3d5165;
}

.reply_text {
  color: #333;
}
