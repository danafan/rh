/* components/FoodItem/food_item.wxss */
.food_content {
  border-radius: 15rpx;
  height: 240rpx;
  width: 100%;
  display: flex;
}

.food_icon {
  border-radius: 15rpx 0 0 15rpx;
  width: 240rpx;
  height: 240rpx;
}
.store_right {
  border-radius: 0 15rpx 15rpx 0;
  background: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 15rpx 10rpx;
}

.store_title {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.has_rob {
  font-size: 26rpx;
  color: #8a8a8a;
}

.right_bottom {
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.price_box {
  display: flex;
  align-items: flex-end;
}

.price {
  margin-right: 10rpx;
  font-size: 40rpx;
  font-weight: 700;
}

.red_color {
  color: #ff5858;
}

.hua {
  text-decoration: line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}

.rob {
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  background: #ff5858;
  font-size: 24rpx;
  color: #fff;
}
.rob_num{
  font-size: 24rpx;
}