/* components/GoodsItem/goods_item.wxss */

.goods_item {
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  border: 1px solid #e6e6e6;
  padding: 10rpx;
}

.goods_img_box {
  position: relative;
  width: 325rpx;
  height: 325rpx;
}

.recommended {
  background-image: linear-gradient(to top, #e84d2a, #ec722e);
  border-radius: 8rpx 21rpx 21rpx 21rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #fff;
  z-index: 1;
}

.goods_img {
  border-radius: 8rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 325rpx;
  height: 325rpx;
}
.price{
  position: absolute;
  left: 10rpx;
  bottom: 10rpx;
  border-radius: 21rpx;
  height: 42rpx;
  line-height: 42rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background: rgba(0, 0, 0, .8);
  font-size: 24rpx;
  color: #fff;
  z-index: 1;
}
.goods_name {
  margin-top: 10rpx;
  width: 325rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
}
