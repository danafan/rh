/* components/IndexCenter/index_center.wxss */
/* 中间模块 */

.seconds_box {
  background: #fff;
  padding: 0 10rpx 10rpx 10rpx;
  width: 100%;
}

.seconds_top {
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.seconds_top_left {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.kill {
  font-size: 36rpx;
  font-weight: 800;
  color: #0b0d1d;
}

.swiper_second {
  position: relative;
  left: 10rpx;
  top: -18rpx;
  width: 200rpx;
  height: 24rpx;
}

.swiper_second_text {
  height: 24rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #ff5858;
  font-weight: 700;
}

.all {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #8a8a8a;
}

.more_right {
  width: 30rpx;
  height: 30rpx;
}

.offer_box {
  height: 198rpx;
}

/* 横线 */

.cross_line {
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  border-top: 1rpx solid #e6e6e6;
}

/* 特价菜和券 */

.food_vouchers {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

/* 特价菜 */

.food_box {
  width: 50%;
}

.food_box_top {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 10rpx;
}

.food_title {
  font-size: 30rpx;
  color: #f6b837;
  font-weight: 700;
}

.all_food {
  background-image: linear-gradient(to right, #f6b837, rgba(246,184,55,.5));
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 15rpx;
  padding-left: 6rpx;
  padding-right: 6rpx;
  font-size: 20rpx;
  color: #fff;
}
.goods_icon{
  width: 26rpx;
  height: 26rpx;
}
.toast {
  font-size: 25rpx;
  color: #8a8a8a;
}

.food_swiper {
  margin-top: 10rpx;
  width: 100%;
  height: 235rpx;
}

.food_item {
  width: 165rpx;
  margin-right: 10rpx;
}

.food_img {
  border-radius: 10rpx 10rpx 0 0;
  width: 100%;
  height: 135rpx;
}

.food_name {
  width: 100%;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.food_price_box {
  width: 100%;
  text-align: center;
}

.food_price_icon {
  font-size: 20rpx;
  color: #ff5858;
  font-weight: 700;
}

.food_now_price {
  font-size: 26rpx;
  color: #ff5858;
  font-weight: 700;
}

.food_old_price {
  margin-left: 10rpx;
  text-decoration: line-through;
  font-size: 20rpx;
  color: #8a8a8a;
}

/* 竖线 */

.longitudinal_line {
  margin-right: 10rpx;
  height: 300rpx;
  border-left: 3rpx solid #e6e6e6;
}
.vouchers_title{
  font-size: 30rpx;
  color: #48b9a3;
  font-weight: 700;
}

.vouchers_box {
  width: 50%;
  height: 200rpx;
}

.vouchers_img {
  margin-top: 10rpx;
  width: 100%;
  height: 215rpx;
}