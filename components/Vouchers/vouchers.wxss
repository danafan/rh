/* components/Vouchers/vouchers.wxss */
.coupons {
  background: #f9d9d0;
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
}

.coupons_left {
  padding: 10rpx 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.coupons_left_top{
  margin-bottom: 20rpx;
}
.coupons_title {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #0b0d1d;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.coupons_toast {
  margin-bottom: 5rpx;
  background-image: linear-gradient(to right, #fff, rgba(255, 255, 255, 0));
  font-size: 24rpx;
  color: #ff5858;
}
.end_time {
  font-size: 24rpx;
  color: #8a8a8a;
}
.line_box_v {
  position: absolute;
  top: 0;
  right: 185rpx;
  width: 30rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.kou_top_v {
  background: #fff;
  width: 26rpx;
  height: 26rpx;
  border-radius: 0 0 13rpx 13rpx;
}

.line_shu_v {
  height: 60%;
  border-left: 2rpx dashed #8a8a8a;
}

.kou_bottom_v {
  border-radius: 13rpx 13rpx 0 0;
  background: #fff;
  width: 26rpx;
  height: 26rpx;
}

.right_box{
  height: 150rpx;
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.but{
  background-image: linear-gradient(to right, #f37464, #ff5858);
  background: #f37464;
  height: 50rpx;
  line-height: 50rpx;
  width: 125rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 25rpx;
  color: #fff;
}
.desc{
  position: absolute;
  bottom: 0;
  font-size: 22rpx;
  color: #8a8a8a;
}
