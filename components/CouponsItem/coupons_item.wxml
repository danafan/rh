          <view class="kou_top_v"></view>
          <view class="line_shu_v"></view>
          <view class="kou_bottom_v"></view>
        </view>
        <!-- 右侧 -->
        <view class="store_right">
          <view>
            <view class="store_title">华莱士 100元代金券</view>
            <view class="has_rob">月销182</view>
          </view>
          <view class="right_bottom">
            <view class="price_box">
              <text class="price_icon">¥</text>
              <text class="price_text">80</text>
              <text class="hua">¥100</text>
            </view>
            <view class="button">去抢购</view>
