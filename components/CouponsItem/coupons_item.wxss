/* components/CouponsItem/coupons_item.wxss */
.store_content {
  border-radius: 15rpx;
  height: 240rpx;
  width: 100%;
  display: flex;
}
.margin{
  margin-bottom: 10rpx;
}
.store_left {
  border-radius: 15rpx 0 0 15rpx;
  position: relative;
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
}

.store_icon {
  border-radius: 15rpx 0 0 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.remaining {
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 18rpx;
  right: -35rpx;
  width: 150rpx;
  text-align: center;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 22rpx;
  color: #fff;
  transform: rotate(45deg);
}

.store_right {
  border-radius: 0 15rpx 15rpx 0;
  background: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}

.store_title {
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.has_rob {
  font-size: 26rpx;
  color: #8a8a8a;
}

.right_bottom {
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.price_box {
  display: flex;
  align-items: flex-end;
}

.price {
  margin-right: 10rpx;
  font-size: 40rpx;
  font-weight: 700;
}

.red_color {
  color: #ff5858;
}

.hua {
  text-decoration: line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}

.rob {
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  background: #ff5858;
  font-size: 24rpx;
  color: #fff;
}
.rob_num{
  font-size: 24rpx;
}