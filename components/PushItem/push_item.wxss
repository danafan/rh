/* components/PushItem/push_item.wxss */

.push_container {
  box-shadow: 5rpx 5rpx 10rpx #bfbfbf;
  border-radius: 8rpx;
  width: 100%;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
}
.top_box{
  border-radius: 8rpx 8rpx 0 0;
  width: 100%;
  height: 300rpx;
  position: relative;
}
.goods_img{
  border-radius: 8rpx 8rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.remaining{
  background: rgba(0, 0, 0, .6);
  position: absolute;
  top: 50rpx;
  right: 0;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  color: #fff;
}
.num{
  color: #ff5858;
}
.name_box{
  padding-left: 8rpx;
  padding-right: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.store_name{
  margin-top: 15rpx;
  background: rgba(0, 0, 0, .9);
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
}
.price{
  font-size: 34rpx;
  color: #ff5858;
  font-weight: 700;
}
.hua{
  text-decoration:line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}
.desc{
  padding-left: 8rpx;
  padding-right: 8rpx;
  margin-top: 15rpx;
  font-size: 26rpx;
  color: #333;
}
.bottom_box{
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 8rpx;
  padding-right: 8rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

