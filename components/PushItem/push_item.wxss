.push_container {
  box-shadow: 5rpx 5rpx 10rpx #bfbfbf;
  border-radius: 8rpx;
  width: 100%;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
}
.top_box{
  border-radius: 8rpx 8rpx 0 0;
  width: 100%;
  height: 320rpx;
  position: relative;
}
.store_img{
  border-radius: 8rpx 8rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.store_type{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  border-radius: 21rpx;
  background: rgba(0, 0, 0, .6);
  height: 42rpx;
  line-height: 42rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 22rpx;
  color: #fff;
}

.store_name_box{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  padding-left: 8rpx;
  display: flex;
  align-items: center;
}
.store_name{
  background: #0b0d1d;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
}
