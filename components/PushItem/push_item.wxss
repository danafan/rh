/* components/PushItem/push_item.wxss */

.push_container {
  box-shadow: 5rpx 5rpx 10rpx #bfbfbf;
  border-radius: 8rpx;
  width: 100%;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
}
.top_box{
  border-radius: 8rpx 8rpx 0 0;
  width: 100%;
  height: 320rpx;
  position: relative;
}
.goods_img{
  border-radius: 8rpx 8rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.red_color{
  color: #ff5858;
}
.grass{
  position: absolute;
  bottom: 20rpx;
  left: 8rpx;
  border-radius: 24rpx;
  background: rgba(0, 0, 0, .6);
  height: 48rpx;
  line-height: 48rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 22rpx;
  color: #fff;
}

.name_box{
  margin-top: 15rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.store_name{
  background: #0b0d1d;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #fff;
}
.price_box{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.price{
  font-size: 36rpx;
  color: #ff5858;
  font-weight: 700;
}
.hua{
  text-decoration:line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}
.desc{
  padding-left: 8rpx;
  padding-right: 8rpx;
  margin-top: 15rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.sort_box_row{
  width: 100%;
  padding-left: 8rpx;
  display: flex;
  align-items: center;
}
.bottom_box{
  margin-top: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 8rpx;
  padding-right: 8rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

