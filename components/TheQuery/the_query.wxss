/* components/TheQuery/the_query.wxss */
.screening_box{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: relative;
}
.select_item{
  display: flex;
  align-items: center;
}
.select_text{
  font-size: 25rpx;
  color: #333;
}
.index_direction{
  margin-left: 5rpx;
  width: 22rpx;
  height: 22rpx;
}
.rotate_up{
  transform: rotate(-90deg);
}
.rotate_down{
  transform: rotate(90deg);
}
.click_item{
  font-size: 25rpx;
  color: #333;
}
.active_item{
  color: #0b0d1d;
  font-weight: 700;
}
.select_box{
  background: rgba(0, 0, 0, .8);
  position: absolute;
  left: 0;
  top: 90rpx;
  width: 50%;
  z-index: 1;
}
.item_box{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  color: #fff;
  padding-left: 20rpx;
}
.active_select{
  color: #ec722e;
  font-weight: 700;
}