.screening_box{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.select_box{
  display: flex;
  align-items: center;
}
.select_text{
  font-size: 25rpx;
  color: #333;
}
.index_direction{
  margin-left: 5rpx;
  width: 22rpx;
  height: 22rpx;
}

.rotate_down{
  transform: rotate(90deg);
}

.active_item{
  color: #0b0d1d;
  font-weight: 700;
}
