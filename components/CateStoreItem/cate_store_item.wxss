/* components/CateStoreItem/cate_store_item.wxss */

.store_container {
  background: #fff;
  /* box-shadow: 5rpx 5rpx 10rpx #bfbfbf; */
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 10rpx;
  width: 100%;
  display: flex;
}

.store_img {
  width: 216rpx;
  height: 162rpx;
}

.store_right {
  margin-left: 10rpx;
  flex: 1;
}

.store_name {
  font-size: 30rpx;
  color: #0b0d1d;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.two_row {
  margin-top: 6rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.star_box {
  display: flex;
  align-items: center;
}

.hot_icon {
  width: 32rpx;
  height: 33rpx;
}

.star_num {
  font-size: 26rpx;
  color: #e84d2a;
  font-weight: 600;
}
.store_tag{
  margin-top: 6rpx;
  font-size: 20rpx;
  color: #e84d2a;
}
.location_box {
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  display: flex;
  align-items: center;
}

.on_the_pin {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #8a8a8a;
  font-weight: 600;
}
/* 优惠数量 */
.preferential_list{
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.tag_label{
  border-radius: 5rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  text-align: center;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #fff;
  margin-right: 10rpx;
}
.te{
  background: #f6b837;
}
.hui{
  background: #ff5858;
}
.quan{
  background: #48b9a3;
}

/* 商家的套餐列表 */

.package_list_box {
  position: relative;
  width: 100%;
  height: 280rpx;
}

.package_list {
  position: absolute;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.package_item {
  padding-bottom: 10rpx;
  margin-right: 15rpx;
  display: inline-block;
  background: #fbfbfb;
  width: 220rpx;
}

.package_img {
  border-radius: 8rpx 8rpx 0 0;
  width: 220rpx;
  height: 180rpx;
}

.package_name {
  white-space:normal;
  width: 220rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 26rpx;
  color: #0b0d1d;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.price_box {
  padding-left: 10rpx;
  display: table-cell;
  vertical-align: bottom;
}

.now_price {
  margin-right: 10rpx;
}

.price_icon {
  font-size: 22rpx;
  color: #ff5858;
}

.price_text {
  font-size: 26rpx;
  font-weight: 700;
  color: #ff5858;
}

.old_price {
  text-decoration: line-through;
  font-size: 22rpx;
  color: #8a8a8a;
}

