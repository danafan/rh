/* components/CateStoreItem/cate_store_item.wxss */

.store_container {
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 15rpx;
  width: 100%;
}

.store_tag {
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.badge_icon {
  width: 32rpx;
  height: 32rpx;
}

.tag_text {
  margin-left: 6rpx;
  border-radius: 0 10rpx 10rpx 0;
  height: 42rpx;
  line-height: 42rpx;
  background: #fdf7d8;
  font-size: 22rpx;
  color: #61573d;
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.store_top_box {
  display: flex;
}

.store_img {
  border-radius: 6rpx;
  width: 160rpx;
  height: 160rpx;
}

.store_right {
  margin-left: 20rpx;
  flex: 1;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.store_name {
  font-size: 30rpx;
  color: #0b0d1d;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.two_row {
  display: flex;
  align-items: center;
}

.hot_icon {
  width: 35rpx;
  height: 35rpx;
}

.star_num {
  font-size: 28rpx;
  color: #e84d2a;
  font-weight: 700;
}

.on_the_pin {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #333333;
}

.loaction {
  font-size: 24rpx;
  color: #8a8a8a;
}

/* 商家的套餐列表 */

.package_list_box {
  margin-top: 20rpx;
  position: relative;
  width: 100%;
  height: 328rpx;
}

.package_list {
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.package_item {
  padding-bottom: 10rpx;
  margin-right: 15rpx;
  display: inline-block;
  background: #fbfbfb;
  width: 300rpx;
}

.package_img {
  border-radius: 8rpx 8rpx 0 0;
  width: 300rpx;
  height: 200rpx;
}

.package_name {
  width: 100%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 26rpx;
  color: #0b0d1d;
  font-weight: 700;
  white-space: normal;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.price_box {
  padding-left: 10rpx;
  display: table-cell;
  vertical-align: bottom;
}

.price_icon {
  font-size: 24rpx;
  color: #ff5858;
}

.now_price {
  margin-right: 10rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #ff5858;
}

.old_price {
  text-decoration: line-through;
  font-size: 24rpx;
  color: #8a8a8a;
}

.sold_num {
  padding-left: 10rpx;
  font-size: 22rpx;
  color: #333;
}
