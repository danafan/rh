/* components/ItemStore/item_store.wxss */
.store_box{
  flex: 1;
  display: flex;
}
.store_img{
  margin-right: 10rpx;
  border-radius: 8rpx;
  width: 108rpx;
  height: 81rpx;
}
.store_info{
  flex: 1;
  height: 81rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.store_name{
  font-size: 26rpx;
  color: #0b0d1d;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.hot_box{
  display: flex;
  align-items: center;
}
.hot_icon{
  width: 35rpx;
  height: 35rpx;
}
.hot_text{
  font-weight: 700;
  font-size: 26rpx;
  color:#e84d2a;
}