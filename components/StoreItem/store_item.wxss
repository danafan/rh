/* components/StoreItem/store_item.wxss */
.store_item{
  /* box-shadow: 0 0 6rpx #bfbfbf; */
  width: 355rpx;
  margin-bottom: 15rpx;
}
.store_img_box{
  width: 355rpx;
  height: 280rpx;
  position: relative;
}
.store_img{
  border-radius: 15rpx 15rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.grass{
  position: absolute;
  bottom: 10rpx;
  left: 10rpx;
  border-radius: 21rpx;
  background: rgba(0, 0, 0, .6);
  height: 42rpx;
  line-height: 42rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 22rpx;
  color: #fff;
}
.store_info{
  border-radius: 0 0 15rpx 15rpx;
  background: #fff;
  padding: 10rpx;
}
.store_name{
  font-size: 28rpx;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.sort_box{
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.score{
  margin-right: 8rpx;
  font-size: 26rpx;
  font-weight: 700;
  color: #ff5858;
}
.tag{
  margin-top: 5rpx;
  display: flex;
  align-items: center;
}
.tag_label{
  border-radius: 5rpx;
  width: 28rpx;
  text-align: center;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 20rpx;
  color: #fff;
  margin-right: 10rpx;
}
.te{
  background: #f7bf38;
}
.hui{
  background: #ff5858;
}
.quan{
  background: #48b9a3;
}
.tag_val{
  flex: 1;
  font-size: 22rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.on_the_pin{
  margin-top: 10rpx;
  width: 100%;
  text-align: end;
  font-size: 24rpx;
  color: #8a8a8a;
}