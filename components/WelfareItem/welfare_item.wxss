/* components/WelfareItem/welfare_item.wxss */
.bus_item{
  border-bottom:1rpx solid #e6e6e6;
  padding: 15rpx 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.special{
  margin-bottom: 20rpx;
  box-shadow: 0 0 6rpx #bfbfbf;
  padding: 15rpx 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.store_banner{
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
}
.bus_content{
  flex: 1;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.bus_title{
  font-size: 28rpx;
  font-weight: 700;
  color: #0b0d1d;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.bus_price_top{
  display: flex;
}
.bus_price{
  font-size: 34rpx;
  font-weight: 700;
  color: #ff5858;
}
.tag_icon{
  position: relative;
  top: -10rpx;
  right: -5rpx;
}
.hua{
  margin-left: 8rpx;
  margin-right: 8rpx;
  text-decoration:line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}
.right_box{
  width: 130rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}
.but{
  background-image: linear-gradient(to right, #f37464, #ff5858);
  height: 50rpx;
  line-height: 50rpx;
  width: 125rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 25rpx;
  color: #fff;
}
.desc{
  position: absolute;
  bottom: 0;
  font-size: 22rpx;
  color: #8a8a8a;
}