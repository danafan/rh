/* components/CateGoryIndex/category_index.wxss */
.category_box {
  margin-top: 25rpx;
  margin-bottom: 15rpx;
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  padding-bottom: 20rpx;
}

.category_row {
  display: flex;
  flex-wrap: wrap;
}

.category_item {
  height: 160rpx;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.category_tag {
  position: absolute;
  top: -10rpx;
  right: -20rpx;
}

.cate_icon {
  width: 90rpx;
  height: 90rpx;
}

.cate_txt {
  font-size: 28rpx;
  color: #333;
}