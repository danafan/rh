/* pages/coupons_detail/coupons_detail.vue.wxss */

.container {
  padding: 0 25rpx 110rpx 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部商品信息 */

.vouchers_box {
  border-radius: 15rpx 15rpx 0 0;
  background: #fff;
  margin-top: 15rpx;
  width: 100%;
}

.top_back {
  border-radius: 15rpx 15rpx 0 0;
  background-image: linear-gradient(to top, #e84d2a, #ec722e);
  width: 100%;
  height: 36rpx;
}

.vouchers_content {
  background: rgba(243, 116, 100, 0.1);
  width: 100%;
  text-align: center;
  height: 180rpx;
  line-height: 180rpx;
  font-size: 56rpx;
  color: #d1b171;
  font-weight: 800;
}

.heng_line {
  background: rgba(243, 116, 100, 0.1);
  height: 30rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.yuan {
  background: #f6f6f6;
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
}

.left_yuan {
  position: relative;
  left: -10rpx;
}

.right_yuan {
  position: relative;
  right: -10rpx;
}

.dashed {
  width: 80%;
  border-top: 1rpx dashed #ff5858;
}

.bottom_content {
  padding-left: 20rpx;
  background: rgba(243, 116, 100, 0.1);
  height: 50rpx;
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #d1b171;
}

/* 店铺信息 */

.store_info {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}

.line {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  border-top: 1rpx solid #f6f6f6;
}

.tags {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  align-content: center;
}

/* 标题 */

.page_title {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title_text {
  font-size: 30rpx;
  font-weight: 700;
  color: #0b0d1d;
}

.toast_text {
  font-size: 26rpx;
  color: #333;
}


/* 购买须知 */

.rules {
  margin-top: 15rpx;
  background: #fff;
  padding: 20rpx;
}

.pick_box {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #0b0d1d;
}

.pick_icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.rules_icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 32rpx;
}

.rule_text {
  margin-bottom: 6rpx;
}

.pick_title {
  margin-bottom: 10rpx;
}

/* 评论 */

.comments_box {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}
