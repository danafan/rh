/* pages/coupons_detail/coupons_detail.vue.wxss */
.container {
  padding: 0 25rpx 110rpx 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部商品信息 */

.vouchers_box {
  border-radius: 15rpx 15rpx 0 0;
  background: #fff;
  margin-top: 15rpx;
  width: 100%;
}
.top_back{
  border-radius: 15rpx 15rpx 0 0;
  background-image: linear-gradient(to top, #e84d2a, #ec722e);
  width: 100%;
  height: 36rpx;
}
.vouchers_content{
  background: rgba(243, 116, 100, 0.1);
  width: 100%;
  text-align: center;
  height: 260rpx;
  line-height: 260rpx;
  font-size: 58rpx;
  color: #d1b171;
  font-weight: 800;
}
/* 店铺信息 */

.store_info {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}

.line {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  border-top: 1rpx solid #f6f6f6;
}

.tags {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  align-content: center;
}

/* 标题 */

.page_title {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title_text {
  font-size: 30rpx;
  font-weight: 700;
  color: #0b0d1d;
}

.title_toast {
  display: flex;
  align-items: center;
}

.toast_text {
  font-size: 26rpx;
  color: #333;
}

.right {
  width: 22rpx;
  height: 22rpx;
}

/* 购买须知 */

.rules {
  margin-top: 15rpx;
  background: #fff;
  padding: 20rpx;
}

.pick_box {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #0b0d1d;
}

.pick_icon {
  margin-right: 10rpx;
  width: 36rpx;
  height: 36rpx;
}

.rules_icon {
  margin-right: 10rpx;
  width: 40rpx;
  height: 32rpx;
}

.rule_text {
  margin-bottom: 6rpx;
}

.pick_title {
  margin-bottom: 10rpx;
}


/* 评论 */

.comments_box {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}

