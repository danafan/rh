/* pages/my/my.wxss */

.top_back {
  background: #0b0d1d;
  width: 100%;
  height: 300rpx;
  display: flex;
}

.user_img_box {
  border: 7rpx solid #d1b171;
  margin-right: 20rpx;
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.user_img {
  border-radius: 50%;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.rh_icon {
  margin-right: 20rpx;
  width: 110rpx;
  height: 110rpx;
}

.user_content {
  flex: 1;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.username {
  margin-bottom: 20rpx;
  font-size: 36rpx;
  color: #d1b171;
  font-weight: 700;
}

.desc {
  font-size: 26rpx;
  color: #fff;
}

.content_box {
  width: 100%;
  padding-left: 15rpx;
  padding-right: 15rpx;
  position: relative;
  top: -90rpx;
  left: 50%;
  transform: translate(-50%);
}

.order_box {
  border-radius: 10rpx;
  background: #fff;
  width: 100%;
  padding: 0 20rpx;
}
.margin{
  margin-top: 20rpx;
}

.order_top {
  border-bottom: 1rpx solid #f6f6f6;
  width: 100%;
  height: 86rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #0b0d1d;
  font-weight: 700;
}

.order_list_box {
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order_item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.item_label {
  display: flex;
  align-items: center;
}

.item_icon {
  width: 40rpx;
  height: 40rpx;
}

.item_text {
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
}

.order_val {
  margin-top: 5rpx;
  display: table-cell;
  vertical-align: bottom;
}

.val_num {
  font-size: 32rpx;
  color: #ff5858;
}

.val_text {
  margin-left: 3rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

/* 服务 */
.feek_but{
  position: absolute;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 100rpx !important;
  z-index: 1;
  opacity: 0;
}
.service_icon {
  margin-bottom: 10rpx;
  width: 46rpx;
  height: 46rpx;
}
.service_text{
  font-size: 26rpx;
  color: #333;
}
