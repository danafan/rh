/* pages/order_detail/order_detail.wxss */

.order_detail_box {
  padding: 20rpx 20rpx 0;
}

/* 商品信息 */

.goods_info {
  background: #fff;
  padding: 20rpx;
  width: 100%;
  display: flex;
}

.goods_img {
  margin-right: 15rpx;
  width: 160rpx;
  height: 160rpx;
}

.info_content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods_name {
  margin-bottom: 15rpx;
  font-size: 28rpx;
  color: #0b0d1d;
  font-weight: 700;
}

.time {
  margin-bottom: 15rpx;
  font-size: 26rpx;
  color: #333;
}

/* 虚线 */

.dashed {
  background: #fff;
  width: 100%;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.yuan {
  background: #f6f6f6;
  border-radius: 15rpx;
  width: 30rpx;
  height: 30rpx;
}

.left {
  position: relative;
  left: -10rpx;
}

.right {
  position: relative;
  right: -10rpx;
}

.heng_line {
  width: 80%;
  border-top: 1rpx dashed #ec722e;
}

/* 待使用 */

.to_be_used {
  background: #fff;
  width: 100%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.qr_title {
  margin-bottom: 20rpx;
  font-size: 32rpx;
  color: #0b0d1d;
  font-weight: 700;
}

.qr_code_img {
  width: 400rpx;
  height: 400rpx;
}

.qr_code_text {
  font-size: 30rpx;
  color: #0b0d1d;
  font-weight: 700;
}
.hua{
  text-decoration: line-through;
}
.order_toast{
  
  margin-top: 10rpx;
  width: 100%;
  font-size: 24rpx;
  color: #ec722e;
}
.margin {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.bottom_box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.period {
  font-size: 24rpx;
  color: #8a8a8a;
}

.apply_refund {
  border-radius: 21rpx;
  background: #8a8a8a;
  width: 130rpx;
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
}

/* 商家信息 */

.store_info {
  margin-top: 15rpx;
  background: #fff;
  padding: 20rpx;
}

.line {
  border-top: 1rpx solid #f6f6f6;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

/* 订单信息 */

.order_info {
  margin-top: 15rpx;
  background: #fff;
  width: 100%;
  padding: 20rpx;
}

.order_info_title {
  margin-bottom: 15rpx;
  font-size: 32rpx;
  color: #0b0d1d;
  font-weight: 700;
}

.info_item {
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.label {
  font-size: 26rpx;
  color: #8a8a8a;
}

.value {
  font-size: 26rpx;
  color: #333;
}

/* 底部按钮 */

.submit_but {
  margin: 30rpx auto;
  border-radius: 45rpx;
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 80%;
  height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 待支付按钮 */

.price_box {
  display: table-cell;
  vertical-align: bottom;
  color: #fff;
}

.price_icon {
  margin-right: 3rpx;
  font-size: 26rpx;
  font-weight: 700;
}

.price_text {
  font-size: 32rpx;
  font-weight: 700;
}

.but_text {
  margin-left: 20rpx;
}
