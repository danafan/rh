<!--pages/order_detail/order_detail.wxml-->
<view class="order_detail_box">
  <!-- 顶部商品信息 -->
  <view class="goods_info">
    <image class="goods_img" mode="aspectFill" src="../../images/banner_03.jpg"></image>
    <view class="info_content">
      <view class="goods_name">石锅鱼4人套餐</view>
      <view class="time">周一至周日 10:00 - 21:00</view>
      <web_tag/>
    </view>
  </view>
  <!-- 券横线 -->
  <view class="dashed" wx:if="{{order_info.order_status == '1' || order_info.order_status == '4' || order_info.order_status == '5'}}">
    <view class="yuan left"></view>
    <view class="heng_line"></view>
    <view class="yuan right"></view>
  </view>
  <!-- 待使用 -->
  <view class="to_be_used" wx:if="{{order_info.order_status == '1'}}">
    <view class="qr_title">券码信息</view>
    <image class="qr_code_img" src="../../images/banner_02.jpg"></image>
    <view class="qr_code_text margin">7789 3267 3874 358</view>
    <view class="bottom_box">
      <view class="period">有效期至：2020-08-25</view>
      <view class="apply_refund">申请退款</view>
    </view>
  </view>
  <!-- 退款/售后 -->
  <view class="to_be_used" wx:if="{{order_info.order_status == '4' || order_info.order_status == '5'}}">
    <view class="qr_title">券码信息</view>
    <view class="bottom_box">
      <view class="qr_code_text hua">7789 3267 3874 358</view>
      <view class="period" wx:if="{{order_info.order_status == '4'}}">{{order_info.order_status_text}}</view>
      <view class="period" wx:if="{{order_info.order_status == '5'}}">已完成</view>
    </view>
  </view>
  <!-- 商家信息 -->
  <view class="store_info">
    <item_store/>
    <view class="line"></view>
    <location_phone/>
  </view>
  <!-- 套餐内容 -->
  <package_content wx:if="{{order_info.order_type == '1'}}" />
  <!-- 购买须知 -->
  <prompt/>
  <!-- 订单信息 -->
  <view class="order_info">
    <view class="order_info_title">订单信息</view>
    <view class="info_item">
      <view class="label">订单号：</view>
      <view class="value">2421341234234</view>
    </view>
    <view class="info_item">
      <view class="label">手机号：</view>
      <view class="value">13067882143</view>
    </view>
    <view class="info_item" wx:if="{{order_info.order_status == '2' || order_info.order_status == '5'}}">
      <view class="label">下单时间：</view>
      <view class="value">2020-08-02 19:28:30</view>
    </view>
    <view class="info_item" wx:if="{{order_info.order_status == '1' || order_info.order_status == '4' || order_info.order_status == '5'}}">
      <view class="label">付款时间：</view>
      <view class="value">2020-08-02 19:28:30</view>
    </view>
    <view class="info_item" wx:if="{{order_info.order_status == '5'}}">
      <view class="label">消费时间：</view>
      <view class="value">2020-08-02 19:28:30</view>
    </view>
    <view class="info_item">
      <view class="label">数量：</view>
      <view class="value">1</view>
    </view>
    <view class="info_item">
      <view class="label">总金额：</view>
      <view class="value">¥138</view>
    </view>
  </view>
  <!-- 待使用 -->
  <view class="submit_but" wx:if="{{order_info.order_status == '1' || order_info.order_status == '4' || order_info.order_status == '5'}}" bindtap="placeOrder">再来一单</view>
  <!-- 未支付 -->
  <view class="submit_but" wx:if="{{order_info.order_status == '2'}}" bindtap="placeOrder">
    <view class="price_box">
      <text class="price_icon">¥</text>
      <text class="price_text">88</text>
      <text class="but_text">继续购买</text>
    </view>
  </view>
</view>