/* pages/food_detail/food_detail.wxss */

.container {
  padding: 0 20rpx 110rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部商品信息 */

.special_box {
  border-radius: 15rpx 15rpx 0 0;
  background: #fff;
  margin-top: 15rpx;
  width: 100%;
  padding: 20rpx;
}

.food_icon {
  border-radius: 10rpx;
  width: 100%;
  height: 350rpx;
}

.food_name {
  margin-top: 8rpx;
  width: 100%;
  font-size: 32rpx;
  color: #0b0d1d;
  font-weight: 700;
}

/* 店铺信息 */

.store_info {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}

.line {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  border-top: 1rpx solid #f6f6f6;
}

/* 标题 */

.page_title {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title_text {
  font-size: 30rpx;
  font-weight: 700;
  color: #0b0d1d;
}


.toast_text {
  font-size: 26rpx;
  color: #333;
}


/* 评论 */

.comments_box {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}
