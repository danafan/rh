/* pages/store_detail/store_detail.wxss */
.store_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.top_back{
  background: #0b0d1d;
  width: 100%;
  height: 320rpx;
  position: relative;
}
.back_img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.mask{
  backdrop-filter: blur(20rpx);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.content_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.shadow_box{
  box-shadow: 0 0 8rpx #bfbfbf;
  border-radius: 15rpx;
  margin: 30rpx auto;
  background: #fff;
  width: 96%;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.store_img{
  border-radius: 8rpx;
  width: 100%;
  height: 320rpx;
}
.store_center_box{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.store_name{
  margin-top: 20rpx;
  width: 670rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: 800;
}
.type_sort{
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.store_type{
  margin-right: 20rpx;
  background: rgba(0, 0, 0, .6);
  padding: 5rpx 8rpx;
  font-size: 22rpx;
  color: #fff;
}

.sort_box{
  background: #f9d9d0;
  height: 34rpx;
  padding-left: 12rpx;
  padding-right: 12rpx;
  line-height: 34rpx;
  font-size: 22rpx;
  color: #ff5858;
}
.tags{
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  align-content: center;
}
.tag{
  margin-right: 15rpx;
  border-radius: 18rpx 18rpx 18rpx 0;
  background: #fdf0dd;
  height: 36rpx;
  line-height: 36rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  font-size: 22rpx;
  color: #ff5858;
}
.center_box_right{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.grass_icon{
  width: 42rpx;
  height: 42rpx;
}
.grass_num{
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #ff5858;
}
.business_hours{
  margin-top: 20rpx;
  width: 100%;
  font-size: 26rpx;
  color: #333;
}
.rest{
  border-radius: 18rpx 18rpx 18rpx 0;
  height: 36rpx;
  line-height: 36rpx;
  padding-right: 8rpx;
  padding-left: 8rpx;
  margin-right: 8rpx;
  background: #dbdbdb;
  font-size: 22rpx;
  color: #fff;
}
/* 下面菜品和券 */
.store_tabs{
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  display: flex;
  align-items: center;
}
.tab{
  height: 68rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 50rpx;
}
.tab_label{
  font-weight: 700;
  font-size: 32rpx;
  color: #333;
}
.active_label{
  color: #ff5858;
}
.active_line{
  border-radius: 3rpx;
  margin-top: 10rpx;
  background-image: linear-gradient(to right, #f37464, #ff5858);
  width: 80%;
  height: 6rpx;
}
/*  菜品列表 */
.goods_list{
  box-shadow: 0 0 8rpx #bfbfbf;
  border-radius: 15rpx;
  /* margin-top: 20rpx;
  background: #fff; */
  width: 100%;
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}