/* pages/store_detail/store_detail.wxss */

.container {
  padding: 15rpx 15rpx 110rpx;
  width: 100%;
}

/* 顶部商品信息 */

.special_box {
  border-radius: 15rpx 15rpx 0 0;
  background: #fff;
  padding: 15rpx;
}
.banner_box{
  width: 690rpx;
  height: 531rpx;
}
.food_icon {
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}

.food_name {
  margin-top: 8rpx;
  width: 100%;
  font-size: 32rpx;
  color: #0b0d1d;
  font-weight: 700;
}
.store_name_box{
  margin-top: 8rpx;
  display: flex;
  align-items: center;
}
.store_icon{
  width: 40rpx;
  height: 40rpx;
}
.store_name{
  font-size: 26rpx;
  color: #8a8a8a;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* 店铺信息 */

.store_info {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}

.line {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  border-top: 1rpx solid #f6f6f6;
}

/* 标题 */

.page_title {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title_text {
  font-size: 30rpx;
  font-weight: 700;
  color: #0b0d1d;
}

.toast_text {
  font-size: 26rpx;
  color: #333;
}



/* 评论 */

.comments_box {
  padding: 20rpx;
  width: 100%;
  background: #fff;
  margin-top: 15rpx;
}

