}

.as_store_name {
  position: absolute;
  top: 0;
  left: 0;
  border-radius: 6rpx 0 6rpx 0;
  height: 46rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #fff;
  z-index: 1;
}

.as_store_name_one {
  border-radius: 6rpx 0 6rpx 0;
  position: absolute;
  top: 0;
  left: 0;
  height: 52rpx;
  line-height: 52rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  background: #ff5858;
  font-size: 26rpx;
  color: #fff;
