/**index.wxss**/

.navgation_box {
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

/* 应用名称 */

.title_text {
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #fff;
  font-weight: 800rpx;
}

/* 顶部背景色 */

.top_back {
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 100%;
  height: 480rpx;
  position: relative;
}

/* 下面部分 */

.content {
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 15rpx 15rpx;
}
 /* 代金券入口 */
.coupons_list{
  background: #ff5858;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}