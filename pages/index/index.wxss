/**index.wxss**/

.navgation_box {
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

/* 应用名称 */

.title_text {
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
  color: #fff;
  font-weight: 800rpx;
}

/* 顶部背景色 */

.top_back {
  background-image: linear-gradient(to left, #e84d2a, #ec722e);
  width: 100%;
  height: 480rpx;
  position: relative;
}

/* 下面部分 */

.content {
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 15rpx 15rpx;
}
/* 搜索框 */
.search_box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location_box {
  display: flex;
  align-items: center;
}

.location_icon {
  width: 32rpx;
  height: 32rpx;
}

.location_text {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 32rpx;
  height: 32rpx;
}
.swiper_search {
  flex: 1;
  height: 30rpx;
}

.input_text {
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  color: #fff;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.zhan {
  width: 180rpx;
}
