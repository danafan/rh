/**index.wxss**/

.index_container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.fixed {
  background: #ff5858;
  /* background: #0b0d1d; */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.navgation_box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.search_box {
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.location_icon {
  width: 30rpx;
  height: 32rpx;
}

.location_text {
  margin-right: 5rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.input_text {
  font-size: 26rpx;
  color: #fff;
}

.zhan {
  width: 210rpx;
}

/* banner */

.top_back {
  width: 100%;
  height: 480rpx;
  position: relative;
}

.banner_box {
  position: absolute;
  width: 100%;
  height: 100%;
}

.banner_img {
  width: 100%;
  height: 100%;
}

/* 分类 */

.category_row {
  position: absolute;
  bottom: -220rpx;
  left: 50%;
  transform: translate(-50%);
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
  width: 96%;
  display: flex;
  flex-wrap: wrap;
}

.category_item {
  height: 160rpx;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.category_tag{
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 15rpx 15rpx 15rpx 0;
  height: 30rpx;
  padding-left: 5rpx;
  padding-right: 5rpx;
  background: #ff5858;
  font-size: 20rpx;
  color: #fff;
}

.cate_icon {
  width: 90rpx;
  height: 90rpx;
}

.cate_txt {
  font-size: 28rpx;
  color: #333;
}

/* 下面部分 */

.content {
  margin-top: 240rpx;
  padding: 0 15rpx;
}

/* 限时特价 */

.seconds_box {
  background: #ddf8f7;
  padding-left: 10rpx;
  padding-top: 20rpx;
  width: 100%;
}

.seconds_top {
  margin-bottom: 10rpx;
  width: 100%;
  display: flex;
}
.time_out{
  display: flex;
  align-items: center;
  color: #ff5858;
}
.timeout_box{
  border-radius: 8rpx;
  background-image: linear-gradient(to right, #f37464, #ff5858);
  width: 45rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}
.left{
  margin-right: 5rpx;
}
.center{
  margin-right: 5rpx;
  margin-left: 5rpx;
}
.right{
  margin-left: 5rpx;
}
.swiper_second {
  position: relative;
  top: -10rpx;
  width: 200rpx;
  height: 36rpx;
}

.swiper_second_text {
  height: 36rpx;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  color: #ff5858;
  font-weight: 700;
}

.kill {
  font-size: 36rpx;
  font-weight: 800;
  color: #ff5858;
}

.wings {
  width: 36rpx;
  height: 36rpx;
}

.hot_box {
  background-image: linear-gradient(to right, #d1b171, #fff);
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  padding-left: 15rpx;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}

.hot_text {
  margin-left: 10rpx;
}

.good_text {
  font-size: 36rpx;
  color: #fff;
  font-weight: 800;
}

.good_icon {
  margin-right: 10rpx;
  width: 42rpx;
  height: 45rpx;
}

.offer_box {
  width: 100%;
  /* height: 320rpx; */
  height: 350rpx;
}

.offer_item {
  margin-right: 20rpx;
  height: 100%;
}

.store_name {
  height: 60rpx;
  display: flex;
  align-items: center;
}

.name_icon {
  border: 5rpx solid #d1b171;
  margin-right: 10rpx;
  border-radius: 50%;
  width: 18rpx;
  height: 18rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}

.store_content {
  box-shadow: 0 0 8rpx #bfbfbf;
  border-radius: 15rpx;
  height: 240rpx;
  width: 100%;
  display: flex;
}

.store_left {
  border-radius: 15rpx 0 0 15rpx;
  position: relative;
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
}

.store_icon {
  border-radius: 15rpx 0 0 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.remaining {
  background-color: rgba(0, 0, 0, 0.8);
  position: absolute;
  top: 18rpx;
  right: -35rpx;
  width: 150rpx;
  text-align: center;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 22rpx;
  color: #fff;
  transform: rotate(45deg);
}

.store_right {
  border-radius: 0 15rpx 15rpx 0;
  background: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}

.store_title {
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.has_rob{
  font-size: 26rpx;
  color: #8a8a8a;
}
.right_bottom {
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.price_box{
  display: flex;
}
.price {
  margin-right: 10rpx;
  font-size: 40rpx;
  font-weight: 700;
}

.red_color {
  color: #ff5858;
}
.discount{
  border-radius: 18rpx 18rpx 18rpx 0;
  background: #f9d9d0;
  font-size: 20rpx;
  color: #ff5858;
  padding-left: 5rpx;
  padding-right: 5rpx;
}
.hua {
  text-decoration: line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}

.rob {
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  background: #ff5858;
  font-size: 24rpx;
  color: #fff;
}

.as_box {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sentiment_box {
  border-radius: 50rpx 50rpx 0 0;
  width: 96%;
  height: 86rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sentiment_text {
  margin-left: 10rpx;
  margin-right: 10rpx;
  font-size: 36rpx;
  color: #d1b171;
  font-weight: 700;
}

.store_list {
  border: 2rpx solid #d1b171;
  width: 100%;
  border-radius: 10rpx;
  padding: 10rpx;
  display: flex;
}

.one {
  border-radius: 6rpx;
