/**index.wxss**/

.index_container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.fixed {
  /* background: #dc384c; */
  background: #ff5858;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.navgation_box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.search_box {
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.location_icon {
  width: 34rpx;
  height: 34rpx;
}

.location_text {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.input_text {
  font-size: 26rpx;
  color: #fff;
}

.zhan {
  width: 210rpx;
}

/* banner */

.top_back {
  width: 100%;
  height: 520rpx;
  position: relative;
}

.banner_box {
  position: absolute;
  width: 100%;
  height: 100%;
}

.banner_img {
  width: 100%;
  height: 100%;
}

/* 分类 */

.category_row {
  border-radius: 8rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%);
  bottom: -100rpx;
  background: #fff;
  box-shadow: 0 0 15rpx #bfbfbf;
  width: 96%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.category_item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cate_icon {
  width: 90rpx;
  height: 90rpx;
}

.cate_txt {
  font-size: 28rpx;
  color: #333;
}

/* 下面部分 */

.content {
  margin-top: 140rpx;
  padding: 0 15rpx;
}

/* 热门发布 */

.hot_box {
  margin-bottom: 20rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.kill {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff5858;
  text-shadow: 2rpx 3rpx 3rpx #ff5858;
}

.thunder_icon {
  margin-left: 10rpx;
  width: 36rpx;
  height: 42rpx;
}

.wings {
  width: 36rpx;
  height: 36rpx;
}

.hot_text {
  margin-left: 10rpx;
}

.good_text {
  margin-right: 10rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: 800;
}

.good_icon {
  width: 42rpx;
  height: 45rpx;
}

.offer_box {
  margin-bottom: 20rpx;
  width: 100%;
  height: 320rpx;
}

.offer_item {
  margin-right: 20rpx;
  height: 100%;
}

.store_name {
  height: 60rpx;
  display: flex;
  align-items: center;
}

.name_icon {
  border: 5rpx solid #ff5858;
  margin-right: 10rpx;
  border-radius: 50%;
  width: 18rpx;
  height: 18rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}

.store_content {
  box-shadow: 0 0 15rpx #bfbfbf;
  border-radius: 15rpx;
  height: 240rpx;
  width: 100%;
  display: flex;
}

.store_left {
  border-radius: 15rpx 0 0 15rpx;
  position: relative;
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
}

.store_icon {
  border-radius: 15rpx 0 0 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.remaining {
  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
  top: 20rpx;
  right: -35rpx;
  height: 36rpx;
  width: 150rpx;
  text-align: center;
  line-height: 36rpx;
  font-size: 22rpx;
  color: #fff;
  transform: rotate(45deg);
}
.num{
  color: #ff5858;
}
.store_right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}

.store_title {
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
}

.sold {
  font-size: 24rpx;
  color: #333;
}

.right_bottom {
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.price {
  font-size: 22rpx;
}
.red_color_l{
  font-size: 56rpx;
  color: #ff5858;
}
.red_color {
  color: #ff5858;
}

.hua {
  text-decoration: line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}

.rob {
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  background: #ff5858;
  font-size: 24rpx;
  color: #fff;
}

.as_box {
  margin-bottom: 40rpx;
  width: 100%;
  height: 360rpx;
  display: flex;
}

.one {
  box-shadow: 0 0 5rpx #bfbfbf;
  border-radius: 15rpx;
  width: 360rpx;
  height: 360rpx;
  position: relative;
  margin-right: 10rpx;
}

.one_icon {
  border-radius: 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.as_store_name {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  background: #ff5858;
  border-radius: 24rpx;
  height: 48rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
  z-index: 1;
}

.on_pin {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  font-size: 22rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
}
.on_the_pin{
  background: rgba(0, 0, 0, 0.6);
  border-radius: 0 15rpx 0 15rpx;
  padding: 8rpx 10rpx;
  color: #fff;
}
.grass_num {
  background: rgba(0, 0, 0, 0.6);
  border-radius: 15rpx 0 15rpx 0;
  padding: 8rpx 15rpx;
  color: #fff;
}
.one_num{
  color:#ff5858;
}
.tt {
  height: 360rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tt_icon_box {
  box-shadow: 0 0 5rpx #bfbfbf;
  border-radius: 15rpx;
  width: 100%;
  height: 175rpx;
  position: relative;
}

.tt_icon {
  border-radius: 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.on_pin_small {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 5rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
  z-index: 1;
}
