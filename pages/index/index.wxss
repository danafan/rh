}

.as_store_name_two {
  background: #4ca5f6;
}

.as_store_name_three {
  background: #ae4ff6;
}

.on_pin_big {
  position: absolute;
  top: 72rpx;
  left: 0;
  padding: 3rpx 5rpx;
  font-size: 22rpx;
  background: #f9d9d0;
  color: #ff5858;
  
}

.grass_num {
  border-radius: 0 22rpx 22rpx 22rpx;
  position: absolute;
  top: 136rpx;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  padding-left: 12rpx;
  padding-right: 12rpx;
  height: 42rpx;
  line-height: 42rpx;
  color: #ff5858;
  font-size: 22rpx;
}

.tt {
  height: 343rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tt_icon_box {
  border-radius: 6rpx;
  width: 100%;
  height: 168rpx;
  position: relative;
}

.tt_icon {
  border-radius: 6rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.on_pin_small {
  background: #f9d9d0;
  font-size: 20rpx;
  color: #ff5858;
  padding-left: 5rpx;
  padding-right: 5rpx;
  position: absolute;
  bottom: 10rpx;
  right: 0;
  padding: 3rpx 5rpx;
  z-index: 1;
}
