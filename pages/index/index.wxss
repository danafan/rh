/**index.wxss**/

.index_container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.fixed {
  background: #ff5858;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.navgation_box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 2;
}

.search_box {
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.location_icon {
  width: 30rpx;
  height: 32rpx;
}

.location_text {
  margin-right: 5rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.input_text {
  font-size: 26rpx;
  color: #fff;
}

.zhan {
  width: 210rpx;
}

/* banner */

.top_back {
  width: 100%;
  height: 420rpx;
  position: relative;
}

.banner_box {
  position: absolute;
  width: 100%;
  height: 100%;
}

.banner_img {
  width: 100%;
  height: 100%;
}

/* 分类 */

.category_row {
  border-radius: 8rpx;
  background: #fff;
  height: 180rpx;
  width: 100%;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.category_item {
  display: inline-block;
  height: 180rpx;
  width: 160rpx;
}

.item_content {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.cate_icon {
  width: 90rpx;
  height: 90rpx;
}

.cate_txt {
  font-size: 28rpx;
  color: #333;
}

/* 下面部分 */

.content {
  padding: 0 15rpx;
}

/* 0元秒杀 */

.seconds_box {
  background: #ddf8f7;
  border-radius: 6rpx;
  padding-left: 10rpx;
  padding-top: 10rpx;
  width: 100%;
}

.hot_box {
  background-image: linear-gradient(to right, #d1b171, #fff);
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  padding-left: 15rpx;
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}

.seconds_top {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}

.swiper_second {
  border-radius: 20rpx;
  background: #ff5858;
  width: 200rpx;
  height: 35rpx;
}

.swiper_second_text {
  height: 35rpx;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
}

.kill {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff5858;
  text-shadow: 2rpx 3rpx 3rpx #ff5858;
}

.thunder_icon {
  margin-left: 10rpx;
  width: 36rpx;
  height: 42rpx;
}

.wings {
  width: 36rpx;
  height: 36rpx;
}

.hot_text {
  margin-left: 10rpx;
}

.good_text {
  font-size: 36rpx;
  color: #fff;
  font-weight: 800;
}

.good_icon {
  margin-right: 10rpx;
  width: 42rpx;
  height: 45rpx;
}

.offer_box {
  width: 100%;
  height: 320rpx;
}

.offer_item {
  margin-right: 20rpx;
  height: 100%;
}

.store_name {
  height: 60rpx;
  display: flex;
  align-items: center;
}

.name_icon {
  border: 5rpx solid #d1b171;
  margin-right: 10rpx;
  border-radius: 50%;
  width: 18rpx;
  height: 18rpx;
}

.name {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}

.store_content {
  box-shadow: 0 0 15rpx #bfbfbf;
  border-radius: 15rpx;
  height: 240rpx;
  width: 100%;
  display: flex;
}

.store_left {
  border-radius: 15rpx 0 0 15rpx;
  position: relative;
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
}

.store_icon {
  border-radius: 15rpx 0 0 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.remaining {
  background-color: rgba(0, 0, 0, 0.7);
  position: absolute;
  top: 20rpx;
  right: -35rpx;
  height: 36rpx;
  width: 150rpx;
  text-align: center;
  line-height: 36rpx;
  font-size: 22rpx;
  color: #fff;
  transform: rotate(45deg);
}

.num {
  color: #ff5858;
}

.store_right {
  border-radius: 0 15rpx 15rpx 0;
  background: #fff;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}

.store_title {
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
}


.right_bottom {
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.price {
  font-size: 22rpx;
}

.red_color_l {
  font-size: 56rpx;
  color: #ff5858;
}

.red_color {
  color: #ff5858;
}

.hua {
  text-decoration: line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}

.rob {
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  background: #ff5858;
  font-size: 24rpx;
  color: #fff;
}

.as_box {
  margin-top: 20rpx;
