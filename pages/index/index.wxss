/**index.wxss**/

.index_container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}

.startBar {
  background: #f3a806;
}

.search_box {
  background: #f3a806;
  padding-left: 15rpx;
  width: 100%;
  display: flex;
  align-items: center;
}

.location_icon {
  width: 34rpx;
  height: 34rpx;
}

.location_text {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #fff;
}

.search_input {
  margin-left: 15rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.5);
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.search_icon {
  margin-right: 10rpx;
  margin-left: 20rpx;
  width: 35rpx;
  height: 35rpx;
}

.input_text {
  font-size: 26rpx;
  color: #fff;
}

.zhan {
  width: 210rpx;
}

/* banner */

.top_back {
  width: 100%;
  height: 368rpx;
  position: relative;
}

.banner_box {
  position: absolute;
  width: 100%;
  height: 100%;
}

.banner_img {
  width: 100%;
  height: 100%;
}

/* 分类 */

.category_row {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.category_item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cate_icon {
  width: 90rpx;
  height: 90rpx;
}

.cate_txt {
  font-size: 28rpx;
  color: #333;
}

/* 下面部分 */

.content {
  padding: 0 15rpx;
}

/* 热门发布 */

.hot_box {
  margin-bottom: 20rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hot_left {
  display: flex;
  align-items: center;
}

.line {
  margin-right: 15rpx;
  background: #f3a806;
  width: 10rpx;
  height: 40rpx;
}

.hot_text {
  font-size: 36rpx;
  color: #333;
  font-weight: 800;
}

.offer_box {
  width: 100%;
  height: 280rpx;
}

.offer_item {
  margin-right: 20rpx;
  height:100%;
}
.store_name{
  height: 60rpx;
  display: flex;
  align-items: center;
}
.name_icon{
  border:5rpx solid #f3a806;
  margin-right: 10rpx;
  border-radius: 50%;
  width:18rpx;
  height: 18rpx;
}
.name{
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}
.store_content{
  box-shadow: 0 0 15rpx #bfbfbf;
  border-radius: 15rpx;
  height: 200rpx;
  width: 100%;
  display: flex;
}
.store_left{
  border-radius: 15rpx 0 0 15rpx;
  position: relative;
  width:200rpx;
  height: 200rpx;
}
.store_icon{
  border-radius: 15rpx 0 0 15rpx;
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
}
.remaining{
  border-radius: 0 0 0 15rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  background: #f3a806;
  font-size: 24rpx;
  color: #fff;
  z-index: 1;
}
.store_right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
}
.store_title{
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
}
.sold{
  font-size: 24rpx;
  color: #333;
}
.right_bottom{
  width:100%;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.price{
  font-size: 30rpx;
  color: #ff5858;
  font-weight: 700;
}
.hua{
  text-decoration:line-through;
  font-size: 26rpx;
  color: #8a8a8a;
}
.rob{
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  background: #f3a806;
  font-size: 24rpx;
  color: #fff; 
}