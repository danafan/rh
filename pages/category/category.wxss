/* pages/service/service.wxss */

.service_container {
  background: #fbfbfb;
}

.tab_list {
  background: #fff;
  width: 100%;
  height: 90rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}

.tab {
  height: 90rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.active_color {
  font-weight: 700;
}

.active_tab {
  position: absolute;
  bottom: 0;
  background-image: linear-gradient(to right, #f37464, #ff5858);
  width: 50%;
  height: 8rpx;
  border-radius: 4rpx;
}

.advertising_list {
  width: 100%;
  padding: 15rpx;
  background: #fbfbfb;
  margin-top: 90rpx;

}