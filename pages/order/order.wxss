/* pages/order/order.wxss */

.order_contailer {
  background: #ededed;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding-left: 15rpx;
  padding-right: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tab_box {
  margin-top: 30rpx;
  border: 1rpx solid #dc384c;
  width: 560rpx;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tab_item {
  width: 280rpx;
  text-align: center;
  color: #dc384c;
}

.active_tab_item {
  background-image: linear-gradient(to right, #dd5d43, #dc384c);
  width: 360rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  color: #fff;
}

.list_box {
  margin-top: 30rpx;
  width: 100%;
}

.store_item {
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  background: #fff;
  width: 100%;
  padding: 20rpx;
}

.store_title {
  width: 100%;
  display: flex;
  align-items: center;
}

.store_icon {
  margin-right: 15rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
}

.store_name {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}

.coupons {
  margin-top: 20rpx;
  width: 100%;
  height: 240rpx;
  display: flex;
  align-items: center;
}

.coupons_money {
  box-shadow:0 0 4rpx #bfbfbf;
  margin-top: 20rpx;
  width: 100%;
}

.coupons_left {
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  height: 100%;
  background: #faeeeb;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupons_top {
  width: 100%;
  padding: 10rpx 20rpx;
  background: #faeeeb;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.top_left {
  flex: 1;
}
.store_title_money{
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.store_icon_money{
  margin-right: 15rpx;
  border-radius: 50%;
  width: 66rpx;
  height: 66rpx;
}
.store_name_money {
  font-size: 26rpx;
  color: #333;
  font-weight: 700;
}
.desc{
  margin-bottom: 10rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
}
.money {
  margin-left: 15rpx;
  display:table-cell;
  vertical:bottom;
  font-size: 24rpx;
  font-weight: 700rpx;
  color: #dc384c;
}

.money_val {
  font-size: 70rpx;
  color: #dc384c;
  font-weight: 800rpx;
}

.coupons_title {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
}

.coupons_toast {
  font-size: 26rpx;
  color: #ff5858;
}

.end_time {
  font-size: 26rpx;
  color: #bfbfbf;
}
.end_time_money{
  font-size: 26rpx;
  color: #bfbfbf;
}
.line {
  width: 2rpx;
  border-left: 2rpx dashed #f2afbd;
  height: 200rpx;
}

.coupons_right {
  border-radius: 20rpx;
  height: 100%;
  background: #faeeeb;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.use {
  background: #dc384c;
  padding: 15rpx 35rpx;
  font-size: 24rpx;
  color: #fff;
}
.use_money{
  background-image: linear-gradient(to right, #dd5d43, #dc384c);
  height: 50rpx;
  line-height: 50rpx;
  width: 120rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 24rpx;
  color: #fff;
}
.line_box{
  background: #faeeeb;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 30rpx;
}
.kou_left{
  box-shadow:inset -1px 1px 0 1px #bfbfbf;
  position: relative;
  left: -4rpx;
  background: #ededed;
  width: 30rpx;
  height: 30rpx;
  border-radius: 0 15rpx 15rpx 0;
}
.line_heng {
  width: 80%;
  border-top: 2rpx dashed #8a8a8a;
}
.kou_right{
  position: relative;
  right: -4rpx;
  border-radius: 15rpx 0 0 15rpx;
  background: #ededed;
  box-shadow:inset 1px 1px 0 1px #bfbfbf;
  width: 30rpx;
  height: 30rpx;
}
.coupons_bottom {
  width: 100%;
  background: #faeeeb;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}
