<!--pages/order/order.wxml-->
<view class="order_contailer">
  <view class="tab_box">
    <view class="tab_item {{tab_index == 1?'active_tab_item':''}}" data-index="1" bindtap="checkTab">优惠券</view>
    <view class="tab_item {{tab_index == 2?'active_tab_item':''}}" data-index="2" bindtap="checkTab">现金券</view>
  </view>
  <!-- 优惠券 -->
  <view class="list_box">
    <view class="store_item">
      <view class="store_title">
        <image class="store_icon" src="../../images/banner_02.jpg"></image>
        <view class="store_name">千岛湖酸菜鱼</view>
      </view>
      <view class="coupons">
        <view class="coupons_left">
          <view>
            <view class="coupons_title">108元抢原价283元的【烤串3-4人套餐】</view>
            <view class="coupons_toast">- 每桌限用1份</view>
            <view class="coupons_toast">- 不可叠加使用</view>
          </view>
          <view class="end_time">使用期限：07.08-08.08</view>
        </view>
        <view class="line"></view>
        <view class="coupons_right">
          <view class="use">使用</view>
        </view>
      </view>
    </view>
  </view>
</view>